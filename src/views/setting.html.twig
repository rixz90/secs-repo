{% extends '@layouts/base.html.twig' %}
{% block header %}
{% include '@common/admin_navbar.html.twig' %}
{% endblock %}
{% block content %}
<main class="container" x-data="settingView">
	<section>
		<div>
			<nav>
				<ul>
					<li>
						<a href="" class="secondary" hx-get="/branches/" hx-target="#response" hx-swap="innerHTML"
							hx-indicator="#indicator" @click="toggleBra()">
							Branch
						</a>
					</li>
					<li>
						<a href="" class="secondary" hx-get="/categories/" hx-target="#response" hx-swap="innerHTML"
							hx-indicator="#indicator" @click="toggleCat()">
							Category
						</a>
					</li>
					<li>
						<a href="" class="secondary" hx-get="/locations/" hx-target="#response" hx-swap="innerHTML"
							hx-indicator="#indicator" @click="toggleLoc()">
							Location
						</a>
					</li>
					<li>
						<a href="" class="secondary" hx-get="/users/admin" hx-target="#response" hx-swap="innnerHTML"
							hx-indicator="#indicator" @click="toggleAdm()">
							Admin
						</a>
					</li>
				</ul>
			</nav>
		</div>
	</section>
	<hr />
	<section id="response"></section>
	<div class="flex center">
		<img id="indicator" class="htmx-indicator flex center" src="assets/svg-loaders/three-dots.svg" />
	</div>
	<hr />
	<section>
		<div x-show="adm" x-collapse>
			{{ include('@panels/adminPanel.html.twig', with_context:false) }}
		</div>
		<div x-show="bra" x-collapse>
			{{ include('@panels/branchPanel.html.twig', with_context:false) }}
		</div>
		<div x-show="cat" x-collapse>
			{{ include('@panels/categoryPanel.html.twig', with_context:false) }}
		</div>
		<div x-show="loc" x-collapse>
			{{ include('@panels/locationPanel.html.twig', with_context:false) }}
		</div>
	</section>
</main>
{% endblock %}