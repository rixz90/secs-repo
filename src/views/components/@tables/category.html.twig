<div class="overflow-auto" style="min-height:40vh">
	<table class="striped">
		<thead>
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>
			{% for c in categories %}
			<tr>
				<td>{{ c.name }}</td>
				<td class="flex center">
					{% include "@common/actionButton.html.twig" with {'controller':'categories','method':'category',
					'id': c.id}%}
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>