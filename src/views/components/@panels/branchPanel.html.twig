<section>
    <h3>Branch</h3>
    <div x-id="['input']">
        <label :for="$id('input')">Code:</label>
        <input type="text" name="code" :id="$id('input')" required />
    </div>
    <div x-id="['input']">
        <label :for="$id('input')">Name:</label>
        <input type="text" name="name" :id="$id('input')" required />
    </div>
    <div x-id="['input']">
        <label :for="$id('input')">Location: </label>
        <details class="dropdown" :id="$id('input')">
            <summary> Select address... </summary>
            <ul>
                <li>
                    <label>
                        <input type="checkbox" name="solid" />Solid
                    </label>
                </li>
            </ul>
        </details>
    </div>
    <div class="container" style="text-align:center;">
        <input type="submit" style="width: fit-content;">
        <input type="reset" value="Reset" style="width: fit-content;">
    </div>
</section>