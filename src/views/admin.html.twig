{% extends '@layouts/base.html.twig' %}

{% block header %}
{% include '@common/admin_navbar.html.twig' %}
{% endblock %}

{% block content %}
<main class="container">
	<section class="flex flex-direction row-reverse">
		<form class="searchbox">
			<fieldset role="group">
				<input type="search" name="search" placeholder="Search" aria-label="Search" />
			</fieldset>
		</form>
	</section>
	<hr />
	<section hx-get="/complaints/" hx-trigger="load delay:1s" hx-swap="innerHTML" hx-indicator="#indicator"></section>
	<div class="flex center">
		<img id="indicator" class="htmx-indicator" src="assets/svg-loaders/oval.svg" />
	</div>
</main>
{% endblock %}