{% set location = locations|first %}
<section>
    <form action="">
        <h3>Location</h3>
        <div x-id="['input']">
            <label :for="$id('input')">Address:</label>
            <input type="text" name="address" :id="$id('input')" value="{{ location.address }}" required />
        </div>
        <div class="container" style="text-align:center;">
            {% if method == 'PUT' is defined %}
            <input type="hidden" name="id" value="{{ location.id }}" />
            <input type="submit" value="Update" hx-put="/locations/location" hx-target="#response" hx-swap="innerHTML"
                hx-indicator="#indicator" style="width: fit-content;" />
            {% else %}
            <input type="submit" value="Submit" hx-post="/locations/location" hx-target="#response" hx-swap="innerHTML"
                hx-indicator="#indicator" style="width: fit-content;" />
            {% endif %}
            <input type="reset" value="Reset" style="width: fit-content;">
        </div>
    </form>
</section>