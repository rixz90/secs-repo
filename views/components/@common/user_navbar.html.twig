<div class="container">
    <a href="/" class="primary">
        <svg style="width: 1.35rem;height:1.35rem">
            <use xlink:href="assets/images/sprite.svg#icon-list"></use>
        </svg>
        Home
    </a>
    <nav>
        <ul>
            <li><a href="/aduan" class="secondary">Create</a></li>
            <li><a href="/semakan" class="secondary">Review</a></li>
        </ul>

        {% if user is not defined %}
        <ul class="icons">
            <li>
                <a href="/login" class="secondary">
                    <svg style="width: 1.35rem;height:1.35rem">
                        <use xlink:href="assets/images/sprite.svg#icon-login"></use>
                    </svg>
                    Login
                </a>
            </li>
            <li>
                <a href="/register" class="secondary">
                    <svg style="width: 1.35rem;height:1.35rem">
                        <use xlink:href="assets/images/sprite.svg#icon-login"></use>
                    </svg>
                    Register
                </a>
            </li>
        </ul>
        {% else %}
        <ul class="icons">
            <li>
                <a href="/admin" class="secondary">
                    <svg style="width: 1.35rem;height:1.35rem">
                        <use xlink:href="assets/images/sprite.svg#icon-list"></use>
                    </svg>
                    Admin
                </a>
            </li>
            <li>
                <form action="/logout" method="post">
                    {{ csrf.fields|raw }}
                    <button class="outline secondary" style="border: none;">
                        <svg style="width: 1.5rem;height:1.6rem">
                            <use xlink:href="assets/images/sprite.svg#icon-log-out"></use>
                        </svg>
                        Logout
                    </button>
                </form>
            </li>
        </ul>
        {% endif %}
    </nav>
</div>